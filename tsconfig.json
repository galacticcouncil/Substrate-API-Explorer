{
  "compilerOptions": {
    "outDir": "./public/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "noEmit": true,
    "jsx": "react",
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@polkadot/ts", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
